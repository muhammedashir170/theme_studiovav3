<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="studiova_pricing" name="studiova Pricing">
        <!-- Pricing Section -->
        <section class="pr-pricing-section position-relative overflow-hidden">
            <!-- Animated Background Elements -->
            <div class="pr-bg-shapes">
                <div class="pr-shape pr-shape-1"></div>
                <div class="pr-shape pr-shape-2"></div>
                <div class="pr-shape pr-shape-3"></div>
            </div>

            <div class="container position-relative">
                <!-- Header Section -->
                <div class="pr-section-header text-center mb-5 mb-lg-8" data-aos="fade-up">
                    <div class="d-inline-flex align-items-center gap-3 mb-4 pr-badge-wrapper">
                        <span class="pr-section-number">05</span>
                        <span class="pr-section-badge">Transparent Pricing</span>
                    </div>
                    <h2 class="pr-section-title mb-4">Choose Your Growth Path</h2>
                    <p class="pr-section-desc mx-auto">Flexible plans designed to scale with your ambitions. No hidden fees, no surprises.</p>
                </div>

                <!-- Pricing Toggle (Monthly/Yearly) -->
                <div class="pr-toggle-wrapper text-center mb-5 mb-lg-7" data-aos="fade-up" data-aos-delay="100">
                    <div class="pr-billing-toggle">
                        <span class="pr-toggle-label">Monthly</span>
                        <label class="pr-toggle-switch">
                            <input type="checkbox" id="pr-billing-toggle"/>
                            <span class="pr-toggle-slider"></span>
                        </label>
                        <span class="pr-toggle-label">Yearly <span class="pr-save-badge">Save 23%</span></span>
                    </div>
                </div>

                <!-- Pricing Cards Grid -->
                <div class="row g-4 g-lg-5 mb-5 mb-lg-8">
                    <!-- Launch Plan -->
                    <div class="col-lg-4" data-aos="fade-up" data-aos-delay="100">
                        <div class="pr-pricing-card" data-plan="launch">
                            <div class="pr-card-header">
                                <div class="pr-plan-icon">
                                    <iconify-icon icon="lucide:rocket" class="fs-1"></iconify-icon>
                                </div>
                                <h3 class="pr-plan-name">Launch</h3>
                                <p class="pr-plan-tagline">Your digital debut</p>
                            </div>

                            <div class="pr-card-pricing">
                                <div class="pr-price-wrapper">
                                    <span class="pr-currency">$</span>
                                    <span class="pr-price" data-monthly="699" data-yearly="539">699</span>
                                    <span class="pr-period">/month</span>
                                </div>
                                <p class="pr-billing-note">Billed <span class="pr-billing-cycle">monthly</span></p>
                            </div>

                            <div class="pr-card-body">
                                <p class="pr-plan-description">Perfect for startups and small businesses ready to make their mark online.</p>

                                <div class="pr-features-list">
                                    <div class="pr-feature-item">
                                        <span class="pr-feature-icon">
                                            <iconify-icon icon="lucide:check"></iconify-icon>
                                        </span>
                                        <span class="pr-feature-text">Competitive research &amp; insights</span>
                                    </div>
                                    <div class="pr-feature-item">
                                        <span class="pr-feature-icon">
                                            <iconify-icon icon="lucide:check"></iconify-icon>
                                        </span>
                                        <span class="pr-feature-text">Wireframing and prototyping</span>
                                    </div>
                                    <div class="pr-feature-item">
                                        <span class="pr-feature-icon">
                                            <iconify-icon icon="lucide:check"></iconify-icon>
                                        </span>
                                        <span class="pr-feature-text">Basic analytics tracking setup</span>
                                    </div>
                                    <div class="pr-feature-item">
                                        <span class="pr-feature-icon">
                                            <iconify-icon icon="lucide:check"></iconify-icon>
                                        </span>
                                        <span class="pr-feature-text">Standard contact form integration</span>
                                    </div>
                                    <div class="pr-feature-item">
                                        <span class="pr-feature-icon">
                                            <iconify-icon icon="lucide:check"></iconify-icon>
                                        </span>
                                        <span class="pr-feature-text">30 days post-launch support</span>
                                    </div>
                                </div>
                            </div>

                            <div class="pr-card-footer">
                                <a href="javascript:void(0)" class="pr-cta-button">
                                    <span>Get Started</span>
                                    <iconify-icon icon="lucide:arrow-right"></iconify-icon>
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Scale Plan (Popular) -->
                    <div class="col-lg-4" data-aos="fade-up" data-aos-delay="200">
                        <div class="pr-pricing-card pr-card-popular" data-plan="scale">
                            <div class="pr-popular-badge">
                                <iconify-icon icon="lucide:star"></iconify-icon>
                                <span>Most Popular</span>
                            </div>

                            <div class="pr-card-header">
                                <div class="pr-plan-icon">
                                    <iconify-icon icon="lucide:trending-up" class="fs-1"></iconify-icon>
                                </div>
                                <h3 class="pr-plan-name">Scale</h3>
                                <p class="pr-plan-tagline">Accelerate your growth</p>
                            </div>

                            <div class="pr-card-pricing">
                                <div class="pr-price-wrapper">
                                    <span class="pr-old-price">$2,199</span>
                                    <span class="pr-currency">$</span>
                                    <span class="pr-price" data-monthly="1699" data-yearly="1308">1,699</span>
                                    <span class="pr-period">/month</span>
                                </div>
                                <p class="pr-billing-note">Billed <span class="pr-billing-cycle">monthly</span></p>
                            </div>

                            <div class="pr-card-body">
                                <p class="pr-plan-description">Ideal for growing brands that need more power, flexibility, and customization.</p>

                                <div class="pr-features-list">
                                    <div class="pr-feature-item">
                                        <span class="pr-feature-icon">
                                            <iconify-icon icon="lucide:check"></iconify-icon>
                                        </span>
                                        <span class="pr-feature-text"><strong>Everything in Launch</strong></span>
                                    </div>
                                    <div class="pr-feature-item">
                                        <span class="pr-feature-icon">
                                            <iconify-icon icon="lucide:check"></iconify-icon>
                                        </span>
                                        <span class="pr-feature-text">Custom design for 10+ pages</span>
                                    </div>
                                    <div class="pr-feature-item">
                                        <span class="pr-feature-icon">
                                            <iconify-icon icon="lucide:check"></iconify-icon>
                                        </span>
                                        <span class="pr-feature-text">Social media integration</span>
                                    </div>
                                    <div class="pr-feature-item">
                                        <span class="pr-feature-icon">
                                            <iconify-icon icon="lucide:check"></iconify-icon>
                                        </span>
                                        <span class="pr-feature-text">Advanced SEO optimization</span>
                                    </div>
                                    <div class="pr-feature-item">
                                        <span class="pr-feature-icon">
                                            <iconify-icon icon="lucide:check"></iconify-icon>
                                        </span>
                                        <span class="pr-feature-text">Priority email support</span>
                                    </div>
                                    <div class="pr-feature-item">
                                        <span class="pr-feature-icon">
                                            <iconify-icon icon="lucide:check"></iconify-icon>
                                        </span>
                                        <span class="pr-feature-text">60 days post-launch support</span>
                                    </div>
                                </div>
                            </div>

                            <div class="pr-card-footer">
                                <a href="javascript:void(0)" class="pr-cta-button">
                                    <span>Start Scaling</span>
                                    <iconify-icon icon="lucide:arrow-right"></iconify-icon>
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Elevate Plan -->
                    <div class="col-lg-4" data-aos="fade-up" data-aos-delay="300">
                        <div class="pr-pricing-card" data-plan="elevate">
                            <div class="pr-card-header">
                                <div class="pr-plan-icon">
                                    <iconify-icon icon="lucide:crown" class="fs-1"></iconify-icon>
                                </div>
                                <h3 class="pr-plan-name">Elevate</h3>
                                <p class="pr-plan-tagline">Premium experience</p>
                            </div>

                            <div class="pr-card-pricing">
                                <div class="pr-price-wrapper">
                                    <span class="pr-currency">$</span>
                                    <span class="pr-price" data-monthly="3499" data-yearly="2693">3,499</span>
                                    <span class="pr-period">/month</span>
                                </div>
                                <p class="pr-billing-note">Billed <span class="pr-billing-cycle">monthly</span></p>
                            </div>

                            <div class="pr-card-body">
                                <p class="pr-plan-description">For established businesses demanding a fully tailored, enterprise-grade solution.</p>

                                <div class="pr-features-list">
                                    <div class="pr-feature-item">
                                        <span class="pr-feature-icon">
                                            <iconify-icon icon="lucide:check"></iconify-icon>
                                        </span>
                                        <span class="pr-feature-text"><strong>Everything in Scale</strong></span>
                                    </div>
                                    <div class="pr-feature-item">
                                        <span class="pr-feature-icon">
                                            <iconify-icon icon="lucide:check"></iconify-icon>
                                        </span>
                                        <span class="pr-feature-text">E-commerce functionality</span>
                                    </div>
                                    <div class="pr-feature-item">
                                        <span class="pr-feature-icon">
                                            <iconify-icon icon="lucide:check"></iconify-icon>
                                        </span>
                                        <span class="pr-feature-text">Custom email templates</span>
                                    </div>
                                    <div class="pr-feature-item">
                                        <span class="pr-feature-icon">
                                            <iconify-icon icon="lucide:check"></iconify-icon>
                                        </span>
                                        <span class="pr-feature-text">Advanced integrations</span>
                                    </div>
                                    <div class="pr-feature-item">
                                        <span class="pr-feature-icon">
                                            <iconify-icon icon="lucide:check"></iconify-icon>
                                        </span>
                                        <span class="pr-feature-text">Dedicated account manager</span>
                                    </div>
                                    <div class="pr-feature-item">
                                        <span class="pr-feature-icon">
                                            <iconify-icon icon="lucide:check"></iconify-icon>
                                        </span>
                                        <span class="pr-feature-text">6 months priority support</span>
                                    </div>
                                </div>
                            </div>

                            <div class="pr-card-footer">
                                <a href="javascript:void(0)" class="pr-cta-button">
                                    <span>Go Premium</span>
                                    <iconify-icon icon="lucide:arrow-right"></iconify-icon>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Comparison Table Toggle -->
                <div class="pr-comparison-trigger text-center mb-5" data-aos="fade-up">
                    <button class="pr-compare-btn" id="pr-show-comparison">
                        <span>Compare All Features</span>
                        <iconify-icon icon="lucide:chevron-down" class="pr-chevron"></iconify-icon>
                    </button>
                </div>

                <!-- Feature Comparison Table -->
                <div class="pr-comparison-table-wrapper" id="pr-comparison-table" style="display: none;">
                    <div class="pr-comparison-table" data-aos="fade-up">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Features</th>
                                    <th>Launch</th>
                                    <th>Scale</th>
                                    <th>Elevate</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Custom Pages</td>
                                    <td>5 pages</td>
                                    <td>10+ pages</td>
                                    <td>Unlimited</td>
                                </tr>
                                <tr>
                                    <td>Design Revisions</td>
                                    <td>2 rounds</td>
                                    <td>4 rounds</td>
                                    <td>Unlimited</td>
                                </tr>
                                <tr>
                                    <td>Response Time</td>
                                    <td>48 hours</td>
                                    <td>24 hours</td>
                                    <td>12 hours</td>
                                </tr>
                                <tr>
                                    <td>SEO Optimization</td>
                                    <td><iconify-icon icon="lucide:minus"></iconify-icon></td>
                                    <td><iconify-icon icon="lucide:check"></iconify-icon></td>
                                    <td><iconify-icon icon="lucide:check"></iconify-icon></td>
                                </tr>
                                <tr>
                                    <td>E-commerce</td>
                                    <td><iconify-icon icon="lucide:minus"></iconify-icon></td>
                                    <td><iconify-icon icon="lucide:minus"></iconify-icon></td>
                                    <td><iconify-icon icon="lucide:check"></iconify-icon></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Trust Indicators -->
                <div class="pr-trust-section" data-aos="fade-up">
                    <p class="pr-trust-title">Trusted by 320+ innovative brands worldwide</p>
                    <div class="pr-partners-marquee">
                        <div class="pr-marquee-track">
                            <div class="pr-partner-logo">
                                <img src="/theme_studiovax/static/src/img/partners-1.svg" alt="Partner"/>
                            </div>
                            <div class="pr-partner-logo">
                                <img src="/theme_studiovax/static/src/img/partners-2.svg" alt="Partner"/>
                            </div>
                            <div class="pr-partner-logo">
                                <img src="/theme_studiovax/static/src/img/partners-3.svg" alt="Partner"/>
                            </div>
                            <div class="pr-partner-logo">
                                <img src="/theme_studiovax/static/src/img/partners-4.svg" alt="Partner"/>
                            </div>
                            <div class="pr-partner-logo">
                                <img src="/theme_studiovax/static/src/img/partners-5.svg" alt="Partner"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>
</odoo>